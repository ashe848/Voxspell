package voxspell;

import java.awt.Component;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JOptionPane;
import javax.swing.JPanel;
import javax.swing.SwingUtilities;

public class Voxspell extends JFrame{
	JPanel contentPane=new JPanel();
	
	public Voxspell(){
		//Below setup code for frame from Theo's code
		super();
		setTitle("VoxSpell version 0.0000000001 Post-PreAlpha (but still in Alpha)");
		setSize(800,600);
		setLocationRelativeTo(null);
		setResizable(false);
		setDefaultCloseOperation(EXIT_ON_CLOSE);
		revalidate();
		
		setContentPane(contentPane);
		JButton btnClearStats = new JButton("Clear");
		btnClearStats.setAlignmentX(Component.CENTER_ALIGNMENT);
		btnClearStats.addActionListener(new ActionListener(){
			public void actionPerformed(ActionEvent e){
				Object[] choices = {"No","Hello"}; //options in drop down
				String choice = (String)JOptionPane.showInputDialog(contentPane, "Do you want to clear ?", "Please Confirm", JOptionPane.QUESTION_MESSAGE, null, choices, "No");
			}
		});
		add(btnClearStats);  
	}
	
	public static void main(String[] args){
		Festival festival = new Festival();
		
		//Testing swingworker capabilities
		System.out.println("Program Starting...");
		festival.speak("I should be going on after line below printed");
		System.out.println("This should be printed before line above finishes being said");
		
		//Initialising Swing program
		SwingUtilities.invokeLater(new Runnable() {
			
			@Override
			public void run() {
				Voxspell instance = new Voxspell();
				instance.setVisible(true);
			}
		});
	}
}
